[colors]
; Colors for 1.Actual bar 
;            2.Workspace overlay color 
;            3.Underline color
background = #1d2e55
background-alt = #2f3f6f
line-color = #0000

; Color of 1. text
;          2. text-2
foreground = #ccc
foreground-alt = #999

; Color designations 
primary = #fff
secondary = #fff
alert = #fff

[bar/example]
; Width of entire bar
width = 95%
; Height of entire bar
height = 24
; Spacing on the sides
offset-x = 2.5%
; Roundness of left-right edges
radius = 8
; Align center module to the middle of the screen
fixed-center = true

; Actual bar color
background = ${colors.background}
; Workspace overlay color
foreground = ${colors.foreground}

; Underline height
line-size = 2
; Default underline color
line-color = #fff

; Additional borders around the bar
; border-size = 0
; border-color = #0000

; How close module is to the left edge
padding-left = 2
; How close module is to the right edge
padding-right = 2

; How close modules are to each other on the left
module-margin-left = 1
; How close modules are to each other on the right
module-margin-right = 2

font-0 = "Overpass:size=10;2"
font-1 = "IcoFont:size=12;0"
; font-2 = "Inconsolata:size=12;0"

modules-left = bspwm
modules-center = date
modules-right = alsa pulseaudio xkeyboard memory cpu battery temperature powermenu

tray-position = right
tray-padding = 2
;tray-background = #0063ff

wm-restack = bspwm

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

cursor-click = pointer
cursor-scroll = ns-resize

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = "K "
format-prefix-foreground = ${colors.foreground-alt}
format-prefix-underline = ${colors.line-color}

label-layout = %layout%
label-layout-underline = ${colors.secondary}

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.secondary}
label-indicator-underline = ${colors.line-color}

;[module/filesystem]
;type = internal/fs
;interval = 25

;mount-0 = /

;label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%
;label-unmounted = %mountpoint% not mounted
;label-unmounted-foreground = ${colors.foreground-alt}

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.line-color}
label-focused-padding = 2

label-occupied = %index%
label-occupied-padding = 2

label-urgent = %index%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-empty = %index%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 2

; Separator in between workspaces
; label-separator = |

[module/mpd]
type = internal/mpd
