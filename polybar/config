[module/date]
type = internal/date

; Module layout (mind the double space)
label = %time% %date%

; How often module updates
interval = 1

; Formatting for time and date
time = %H:%M
date = " %d-%m-%Y"

; Symbol/text before module
; format-prefix = 
; Color for module text before module
; format-prefix-foreground = ${colors.foreground-alt}
; Underline color for module
; format-underline = #000

; ======================================================================

[module/pulseaudio]
