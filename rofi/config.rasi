#window {
    background-color: rgba (59, 66, 82, 100%);
    border:           2;
    padding:          5;
}
#mainbox {
    border:  0;
    padding: 0;
}

#message {
    border:       1px dash 0px 0px ;
    border-color: rgba (94, 129, 172, 100%);
    padding:      1px ;
}

/* Currently unknown 
